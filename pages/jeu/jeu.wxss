/* connect4.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5; /* Couleur de fond générale */
}

/* Styles pour les boutons Retour et Abandonner */
.btn-retour {
  background-color: #374152; /* Couleur bouton retour */
  color: white;
}

.btn-abandonner {
  background-color: #E31B23; /* Couleur bouton abandonner */
  color: white;
}

/* Styles pour le plateau de jeu et les cellules */
.game-board {
  display: grid;
  grid-template-columns: repeat(5, 1fr); /* Pour une grille 5x5 comme sur l'image */
  border: 4px solid #B65509; /* Bordure principale */
  border-radius: 8rpx;
}

.board-cell {
  width: 100rpx; /* Ajustez la taille */
  height: 100rpx; /* Ajustez la taille */
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(90deg, #B65509, #B75609E5); /* Dégradé pour les cases vides */
  border: 1px solid #B65509; /* Couleur de bordure des cases */
}

/* Styles des pions */
.token {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.player1-token {
  background-color: #4CAF50; /* Couleur pion joueur 1 (vert) */
}

.player2-token {
  background-color: #F44336; /* Couleur pion joueur 2 (rouge) */
}

.empty-cell {
  /* Style pour les cases vides si nécessaire, par exemple une bordure intérieure blanche */
  border: 2rpx solid white;
}

