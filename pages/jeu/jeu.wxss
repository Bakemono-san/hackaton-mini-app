/* game.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF8E7 0%, #FFE8C5 100%);
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Header */
.header {
  width: 100%;
  margin-bottom: 30rpx;
}

.back-button {
  background-color: #4A5568;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
  width: fit-content;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* Styles du bouton jeu-button */
.jeu-button-back {
  width: 171px;
  height: 45px;
  position: absolute;
  top: 45px;
  left: 37px;
  border-radius: 5px;
  opacity: 1;
  padding: 25px 30px;
  background-color: white;
  border: 1px solid #8B4513;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

/* Section des joueurs */
.players-section {
  width: 100%;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.player-card {
  flex: 1;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
  border: 4rpx solid transparent;
}

.player-card.active {
  transform: scale(1.05);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.player1.active {
  border-color: #48BB78;
  background-color: #F0FFF4;
}

.player2.active {
  border-color: #F56565;
  background-color: #FFF5F5;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.player1 .player-avatar {
  background-color: #48BB78;
}

.player2 .player-avatar {
  background-color: #F56565;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.player-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.player-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #2D3748;
}

.player-score {
  font-size: 24rpx;
  color: #718096;
}

/* Plateau de jeu */
.game-board {
  width: 100%;
  max-width: 680rpx;
  margin-bottom: 40rpx;
}

.board-grid {
  background: linear-gradient(135deg,#B65509 0%, #B75609E5 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.cell  {
  aspect-ratio: 1;
  
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.impair {

  background-color: #FBBF24;

}
.pair {

  background-color: #FDE047;

}



.cell:active {
  transform: scale(0.95);
}

.token {
  width: 80%;
  height: 80%;
  border-radius: 50%;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  position: relative;
}

.token-player1 {
  background: radial-gradient(circle at 30% 30%, #68D391, #48BB78);
  border: 6rpx solid white;
}

.token-player1::after {
  content: '';
  position: absolute;
  width: 40%;
  height: 40%;
  border-radius: 50%;
  background-color: white;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.token-player2 {
  background: radial-gradient(circle at 30% 30%, #FC8181, #F56565);
  border: 6rpx solid white;
}

.token-player2::after {
  content: '';
  position: absolute;
  width: 40%;
  height: 40%;
  border-radius: 50%;
  background-color: white;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.token-cross {
  background-color: #2D3748;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cross-line {
  position: absolute;
  width: 80%;
  height: 8rpx;
  background-color: white;
  border-radius: 4rpx;
}

.line1 {
  transform: rotate(45deg);
}

.line2 {
  transform: rotate(-45deg);
}

/* Boutons d'action */
.actions {
 
  width: 100%;
  max-width: 300rpx;
  display: flex;
  justify-content:center;
  align-items:center;
  gap: 20rpx;
}

.btn {
  flex: 1;
  padding: 30rpx 0;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.2s, box-shadow 0.2s;
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.btn-abandon {

  background: linear-gradient(135deg, #F56565 0%, #E53E3E 100%);
  color: white;
  
}

.btn-place {

  background: linear-gradient(135deg, #4A5568 0%, #2D3748 100%);
  color: white;
}
