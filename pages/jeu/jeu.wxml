<!-- game.wxml -->
<view class="container">
  <!-- Header avec bouton retour -->
  <view class="header">
    <view class="back-button" bindtap="onBack">
      <image src="/images/icones/retour.svg" class="back-icon"></image>
      <text>Retour</text>
    </view>
  </view>
  <!-- Section des joueurs -->
  <view class="players-section">
    <view class="player-card player1 {{currentPlayer === 1 ? 'active' : ''}}">
      <view class="player-avatar">
        <image src="/images/icones/eagle.svg" class="avatar-img"></image>
      </view>
      <view class="player-info">
        <text class="player-name">Joueur 1</text>
        <text class="player-score">{{player1Score}} jetons restants</text>
      </view>
    </view>
    <view class="player-card player2 {{currentPlayer === 2 ? 'active' : ''}}">
      <view class="player-avatar">
        <image src="/images/icones/lion.svg" class="avatar-img"></image>
      </view>
      <view class="player-info">
        <text class="player-name">Joueur 2</text>
        <text class="player-score">{{player2Score}} jetons restants</text>
      </view>
    </view>
  </view>
  <!-- Plateau de jeu -->
  <view class="game-board">
    <view class="board-grid">
      <view wx:for="{{board}}" wx:key="index" class="cell {{index % 2 === 0 ? 'pair' : 'impair'}}" bindtap="onCellTap" data-index="{{index}}">
        <view wx:if="{{item === 1}}" class="token token-player1"></view>
        <view wx:elif="{{item === 2}}" class="token token-player2"></view>
      </view>
    </view>
  </view>
  <!-- Boutons d'action -->
  <view class="actions">
    <button class="btn btn-abandon" bindtap="onAbandon">
      <image src="/images/icones/cancel.svg" class="back-icon"></image>
      Abandonner
    </button>
    <button class="btn btn-place" bindtap="onPlace">
      <image src="/images/icones/pause.png" class="back-icon"></image>
      Sur Place
    </button>
  </view>
</view>