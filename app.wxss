/* flex */

.flex {
  display: flex;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

.flex-col {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.justify-between {
  justify-content: space-between;
}

.justify-start {
  justify-content: start;
}

.justify-center {
  justify-content: center;
}

.items-center {
  align-items: center;
}

.items-start {
  align-items: flex-start;
}

.gap-4{
  gap: 32rpx;
}

.gap-2{
  gap: 16rpx;
}

.gap-1{
  gap: 4rpx;
}


/* border & radius */

.rounded { border-radius: 8rpx; }
.rounded-md { border-radius: 12rpx; }
.rounded-lg { border-radius: 20rpx; }
.rounded-full { border-radius: 9999rpx; }

.border { border: 1rpx solid #e5e5e5; }
.border-gray { border: 1rpx solid #d4d4d4; }
.border-yellow{ border: 8rpx solid #eab308}

.shadow {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}


.hidden { display: none; }
.block { display: block; }

.overflow-hidden { overflow: hidden; }
.overflow-scroll { overflow: scroll; }

.relative { position: relative; }
.absolute { position: absolute; }


/* Padding */
.p-2 { padding: 16rpx; }
.p-3 { padding: 24rpx; }
.p-4 { padding: 32rpx; }
.p-6 { padding: 48rpx; }

.pt-4 { padding-top: 32rpx; }
.pb-4 { padding-bottom: 32rpx; }
.pl-4 { padding-left: 32rpx; }
.pr-4 { padding-right: 32rpx; }

.py-2{padding: 16rpx 0rpx;}
.px-2{padding: 0rpx 16rpx;}
.py-4{padding: 32rpx 0rpx;}
.px-4{padding: 0rpx 32rpx;}

/* Margin */
.m-2 { margin: 16rpx; }
.m-4 { margin: 32rpx; }
.mt-2 { margin-top: 16rpx; }
.my-2 { margin: 16rpx 0rpx; }
.mt-4 { margin-top: 32rpx; }
.mb-4 { margin-bottom: 32rpx; }
.my-4 { margin: 32rpx 0rpx; }
.mb-2 { margin-bottom: 16rpx; }
.ml-2 {margin-left: 16rpx}

